model Habit {
  id              String           @id @default(uuid())
  studyId         String
  /// 습관의 이름(물 마시기, 책 읽기 등)
  name            String           @db.VarChar(100)
  completedHabits CompletedHabit[]
  study           Study            @relation(fields: [studyId], references: [id], onDelete: Cascade)

  @@index([studyId])
}
